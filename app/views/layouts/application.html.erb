<!DOCTYPE html>
<html>
  <head>
    <title>TakunomiMenu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

 <nav class="navbar navbar-expand-lg navbar-light bg-light">
   <div class="container">
  <a class="navbar-brand" href="/">Takunomi</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">

       <% if user_signed_in? %>
       <a><%= link_to 'Myページ', user_path(current_user.id), class: "nav-item nav-link active" %></a>
       <a><%= link_to 'レシピを書く', new_recipe_path, class: "nav-item nav-link active" %></a>
       <a><%= link_to '皆の投稿', recipes_path, class: "nav-item nav-link active" %></a>
       <a><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-item nav-link active" %></a>
      <% else %>
       <a><%= link_to "新規登録", new_user_registration_path, class: "nav-item nav-link active" %></a>
       <a><%= link_to "ログイン", new_user_session_path, class: "nav-item nav-link active" %></a>
       <a><%= link_to '一覧', recipes_path, class: "nav-item nav-link active" %></a>
      <% end %>
      </div>
    </div>
  </div>
  </nav>
    <%= yield %>
  </body>
</html>
