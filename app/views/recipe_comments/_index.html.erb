<% recipe.recipe_comments.each do |recipe_comment| %>
  <% recipe_comment_user = recipe_comment.user %>
   <div class="card w-75 mx-auto my-3">
     <div class="card-body">
       <h5 class="card-title">
         <%= link_to user_path(recipe_comment_user), class: "user_#{recipe_comment_user.id}" do %>
    		  <%= attachment_image_tag recipe_comment_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60", class:"rounded-circle mr-3" %>
    		  <%= recipe_comment_user.name %>
    		 <% end %>
  		 </h5>
  	</div>
  	<p class="card-text ml-3"><%= recipe_comment.comment %></p>
  	<% if current_user == recipe_comment_user %>
    	<div><%= link_to 'Destroy', recipe_recipe_comment_path(recipe_comment.recipe_id, recipe_comment.id),method: :delete, remote: true %></td>
  	<% end %>
  </div>
   </div>
</div>
  <% end %>




