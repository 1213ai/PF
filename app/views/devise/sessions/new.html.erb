<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<div class="card mb-5 w-50  mx-auto shadow-lg">
  <div class= "text-center m-3"><%= image_tag 'logotop.png' %>
    <h2>Log In</h2>
    <p>welcome home. I've been waiting for you</p>
  </div>

    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
    </div>

     <div>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password(6characters minimum)", class: "form-control" %>
     </div>

     <% if devise_mapping.rememberable? %>
      <div class="m-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
     <% end %>

    <div class="text-center">
     <button type="submit" class="btn btn-warning btn-lg btn-block">Log In</button>
    </div>

    <% end %>

     <div class="m-2 link-color">
       <%= render "devise/shared/links" %>
    </div>

</div>







