<% if @user.errors.any? %>
  <h2 class="errors text-center mb-5"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
<% end %>
<div class="card mb-5 w-50  mx-auto shadow-lg mt-5">
 <div class= "text-center m-3"><%= image_tag 'logotop.png' %>
  <h2>Sign Up</h2>
  <p>welcome to the world of home only</p>
 </div>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

     <div>
       <%= f.text_field :name, autofocus: true, placeholder: "name", class: "form-control" %>
      <% if @user.errors.include?(:name) %>
        <p style="color: white; background-color: red;"><%= @user.errors.full_messages_for(:name).first %>
      <% end %>
     </div>

     <div>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control"%>
       <% if @user.errors.include?(:email) %>
        <p style="color: white; background-color: red;"><%= @user.errors.full_messages_for(:email).first %>
       <% end %>
     </div>


     <div>
       <%= f.password_field :password, autocomplete: "new-password", placeholder: "password(6characters minimum)", class: "form-control" %>
       <% if @user.errors.include?(:password) %>
        <p style="color: white; background-color: red;"><%= @user.errors.full_messages_for(:password).first %>
       <% end %>
     </div>


     <div>
       <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password_confirmation", class: "form-control" %>
     </div>

    <div class="text-center">
     <button type="submit" class="btn btn-warning btn-lg btn-block">Sing UP</button>
    </div>

    <% end %>

     <div class="m-2 link-color">
       <%= render "devise/shared/links" %>
    </div>

</div>

