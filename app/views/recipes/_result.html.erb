<!--レシピ表示-->
<% @recipes.each do |recipe| %>
  <div class="card mb-5 w-75  mx-auto shadow-lg">
    <div class="row">
     <div class="col-lg-5-md-6-sm-6">
       <div class="img-container"><%= attachment_image_tag recipe, :image, :fill, 300, 300, fallback: "pngtree.jpg", size:'300x300' %></div>
     </div>
     <div class="col-lg-7-md-6-sm-6">
       <div class="card-body">
         <p class="card-text ml-5">
           <%= attachment_image_tag recipe.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40', class:"mt-4 mr-3 rounded-circle" %>
           by. <%= recipe.user.name %>
         </p>
         <h5 class="card-title ml-5">料理名★<%= link_to recipe_path(recipe.id), class:"font-color" do %>
           <%= recipe.title %>
           <% end %>
         </h5>
         <div class="catchcopy ml-5"><%= recipe.catchcopy %></div>
       </div>
      </div>
    </div>
  </div>
<% end %>







