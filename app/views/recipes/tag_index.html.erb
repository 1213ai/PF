<div class="mt-5">
  <%= render 'select_form' %>
</div>
<div>
  <%= render 'searchs/form' %>
</div>

<h3 class="ml-5 mt-2"><i class="fas fa-tags"></i> タグリスト</h3>
  <% @tag_list.each do |list| %>
  <div class= "m-5">
  <div class= "card w-25 bg-warning">
    <i class="fas fa-circle mt-2 ml-2 tag-color"></i>
    <p class="text-center tag-color"><%= link_to list.tag_name, tag_recipes_path(tag_id: list.id), class: "tag-text" %><%= "(#{list.recipes.count})" %></p>
  </div>
  </div>
  <% end %>

