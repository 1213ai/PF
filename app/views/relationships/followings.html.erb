<% if @users.exists? %>
  <% @users.each do |user| %>
  <div class="card my-5 w-75  mx-auto shadow-lg">
      <p class="card-text ml-5 mt-2 link-color">
          <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40', class:"mt-3 mr-3 rounded-circle" %>
          by. <%= user.name %>
      </p>
       <% end %>
      <p class="introduction ml-5"><%= user.introduction %></p>
    </div>
   <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>

