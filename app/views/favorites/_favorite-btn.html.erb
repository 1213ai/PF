<% if recipe.favorited_by?(current_user) %>
  <%= link_to recipe.favorites.count, recipe_favorites_path(recipe), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to recipe.favorites.count, recipe_favorites_path(recipe), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>