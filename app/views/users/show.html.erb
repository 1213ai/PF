<!--プロフィール-->
  <div class="py-5 text-center">
      <div class="d-block mx-auto mb-4"> <%= attachment_image_tag @user, :profile_image, :fill, 130, 130, format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 mr-3 rounded-circle"%></div>
      <h3><%= @user.name %></h3>
      <p><%= render 'users/info', user: @user %></p>
      <p class="lead">- - -introduction- - -</p>
      <p><%= @user.introduction %></p>
      <% if @user.id == current_user.id %>
       <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
 </div>
 

<!--My投稿一覧-->
<% @user.recipes.each do |recipe| %>
<div class="card mb-5 w-75 mx-auto shadow-lg">
  <div class="row no-gutters">
    <div class="col-md-4">
      <div class="img-container"><%= attachment_image_tag recipe, :image, format: 'jpeg' %></div>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">料理名<%= link_to recipe_path(recipe.id) do %>
                                <%= recipe.title %>
                              <% end %>
        </h5>
        <p class="card-text"><%= recipe.catchcopy %></p>
      </div>
    </div>
  </div>
</div>
<% end %>



