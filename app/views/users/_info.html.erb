 <div class="m-2">follows
   <%= link_to user_followings_path(user), class:"font-color" do %>
    <%= user.followings.count %>
   <% end %>
   followers
   <%= link_to user_followers_path(user), class:"font-color" do %>
    <%= user.followers.count %>
   <% end %>
 </div>

 <div class="mb-3">
   <% unless current_user == user %>
   <% if current_user.following?(user) %>
     <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-info" %>
   <% else %>
      <%= link_to "フォローをする", user_relationships_path(user.id), method: :post, class:"btn btn-outline-warning" %>
    <% end %>
   <% end %>
 </div>
</dv>